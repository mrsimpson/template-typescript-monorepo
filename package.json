    "eslint-config-prettier": "^8.6.0",
    "husky": "^8.0.0",
    "lint-staged": "^13.1.2",
    "nodemon": "^2.0.21",
    "prettier": "^2.8.3",
    "rimraf": "^4.3.1",
    "turbo": "^1.8.3",
    "typescript": "^4.9.5",
    "vitepress": "1.6.1",
    "vitepress-plugin-mermaid": "2.0.17",
    "vitest": "^1.6.0"
  },
  "packageManager": "pnpm@9.14.2"
